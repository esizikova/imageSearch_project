clear all;
close all;

%read in all images
loadIm

im1 = imread ( '../Dataset/coast_bea3.jpg' );
im2 = imread ( '../Dataset/coast_bea10.jpg' );

bins = 256;
descriptor1 = stacked_histograms ( im1, bins );
descriptor2 = stacked_histograms ( im2, bins );

subplot( 2, 2, 1 ) ; imshow ( im1 ); 
subplot( 2, 2, 2 ) ; plot( 1:size(descriptor1,1), descriptor1, 'k-' );
                     axis( [0 size(descriptor1,1) 0 max(descriptor1)] );
subplot( 2, 2, 3 ) ; imshow ( im2 ); 
subplot( 2, 2, 4 ) ; plot( 1:size(descriptor2,1), descriptor2, 'k-' );
                     axis( [0 size(descriptor2,1) 0 max(descriptor2)] );